# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

GEOPHONE_LAYERS = "${@os.path.abspath(os.path.join("${TOPDIR}", os.pardir))}"

BBLAYERS ?= " \
    ${GEOPHONE_LAYERS}/geophone/meta \
    ${GEOPHONE_LAYERS}/geophone/meta-poky \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-oe \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-multimedia \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-networking \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-perl \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-python \
    ${GEOPHONE_LAYERS}/geophone/meta-openembedded/meta-webserver \
    ${GEOPHONE_LAYERS}/geophone/meta-raspberrypi \
    ${GEOPHONE_LAYERS}/geophone/meta-geophone \
"
